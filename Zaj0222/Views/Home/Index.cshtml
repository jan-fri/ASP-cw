@model IEnumerable<Zaj0222.Models.Customers>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>City</th>
                <th>Operations</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerID</td>
                    <td>@customer.CompanyName</td>
                    <td>@customer.City</td>
                    <td>@Html.ActionLink("Edycja", "Edit",
                       new { id=customer.CustomerID },
                       new { @class = "btn btn-" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>